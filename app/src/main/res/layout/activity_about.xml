<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="12dp"
            android:background="@color/green"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/background_transparent"
                android:src="@drawable/backrecipebutton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="About Us"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold" />
        </LinearLayout>

        <!-- Logo Image -->
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:background="@mipmap/logo_with_text"
            android:layout_gravity="center"/>

        <!-- About Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:justificationMode="inter_word"
            android:text="MealKit is your go-to kitchen assistant for easy, budget-friendly meal planning. We combine AI-powered meal suggestions, a recipe book, and an automated grocery list to solve the daily What’s for meal? dilemma. Tailored to your tastes and budget, MealKit helps you plan meals, reduce food waste, and make the most of your ingredients—saving you time and money with every meal.\n\nAt MealKit, our mission is to make cooking stress-free, affordable, and enjoyable. Let us help you simplify your kitchen, one meal at a time."
            android:fontFamily="@font/poppins_light"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Developers"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold">
        </TextView>

        <!-- Contact Cards -->
        <androidx.cardview.widget.CardView
